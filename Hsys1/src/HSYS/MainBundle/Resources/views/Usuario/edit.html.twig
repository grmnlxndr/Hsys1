{% extends "HSYSMainBundle:Usuario:usuariobase.html.twig" %}

{% block title %}ADMIN{% endblock %}

{% block contenido %}
<h3>Usuario edit</h3>

<form action="{{ path('admin_usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_usuario') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_usuario_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}