{% extends 'HSYSMainBundle:Admin:adminbase.html.twig' %}

{% block title %}ADMIN{% endblock %}

{% block contenido %}

<h3>Tabla Provincia:</h3>
<form id="nuevo_provincia" name="nuevo_provincia" action="{{ path('admin_provincia') }}" method="post">
    <label style="color: #B90302">Insertar nueva Provincia</label><br/>
    <table>
        <tr>
            <td><label>Nombre: </label></td><td>{{ form_widget(form.nombre, {'attr': {'autofocus': 'autofocus'}}) }}</td><td>{{ form_errors(form.nombre) }}</td>
        </tr>
        <tr>
            <td><label>Detalle: </label></td><td>{{ form_widget(form.detalle) }}</td><td>{{ form_errors(form.detalle) }}</td>
        </tr>
        <tr>
            <td><label>País al que pertenece: </label></td><td>{{ form_widget(form.Pais) }}</td><td>{{ form_errors(form.Pais) }}</td>
        </tr>
        <tr>
            <td><input type="submit" value="Agregar"/></td><td colspan="2">{{ form_rest(form) }}</td>
        </tr>
    </table>
</form>
<br/>
<h4>Contenido de la tabla:</h4>
<table class="consulta" style="width: 100%">
    <tr>
        <th>ID</th><th>Nombre Provincia</th><th>Detalle</th><th>País</th>
    </tr>
    {% for provincia in provincias %}
    <tr>
        <td>{{ provincia.id }}</td><td>{{ provincia.nombre }}</td><td>{{ provincia.detalle }}</td><td>{{ provincia.Pais }}</td>
    </tr>
    {% else %}
    <div class="consulta"><img src="{{ asset('images/error.png') }}"/>    NO SE HAN ENCONTRADO DATOS</div>
    <br/>
    {% endfor %}
</table>

{% endblock %}