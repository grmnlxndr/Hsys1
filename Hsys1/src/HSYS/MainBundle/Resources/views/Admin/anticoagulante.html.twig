{% extends 'HSYSMainBundle:Admin:adminbase.html.twig' %}

{% block title %}ADMIN{% endblock %}

{% block contenido %}

<h3>Tabla Anticoagulante:</h3>
<form id="nuevo_anticoagulante" name="nuevo_anticoagulante" action="{{ path('admin_anticoagulante') }}" method="post">
    <label style="color: #B90302">Insertar nuevo Anticoagulante</label><br/>
    <label>Nombre: </label>{{ form_widget(form.nombre) }}
    <input type="submit" value="Agregar"/> {{ form_errors(form.nombre) }}
    {{ form_rest(form) }}
</form>
<br/>
<h4>Contenido de la tabla:</h4>
<table class="consulta" style="width: 100%">
    <tr>
        <th>ID</th><th>Nombre Anticoagulante</th>
    </tr>
    {% for anticoagulante in anticoagulantes %}
    <tr>
        <td>{{ anticoagulante.id }}</td><td>{{ anticoagulante.nombre }}</td>
    </tr>
    {% else %}
    <div class="consulta"><img src="{{ asset('images/error.png') }}"/>    NO SE HAN ENCONTRADO DATOS</div>
    <br/>
    {% endfor %}
</table>

{% endblock %}