{% extends 'HSYSMainBundle:Analisis:analisisbase.html.twig' %}

{% block title %}Nuevo Análisis{% endblock %}


{% block contenido %}
<h3>Datos de la Donación:</h3>

<table class="detalle">
    <tr>
        <th>ID: </th>
        <td>{{ donacion.id }}</td>
    </tr>
    <tr>
        <th>Número de bolsa:  </th>
        <td>{{ donacion.idbolsa }}</td>
    </tr>
    <tr>
