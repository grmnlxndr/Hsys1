<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <title>HSys - Imprimir Etiqueta</title>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" type="text/css" />
        <link rel="icon" type="image" href="{{ asset('images/Hsys icon1.png') }}" />
    </head>
    <body style="background: white">
        <table>
            <tr>
                <td><a id="boton" onclick="imprimir()" style="font-size: larger; font-weight: bold; cursor: pointer">Imprimir</a></td><td style="width: 25px"></td>
                <td><a id="volver" href="{{ path('informe_desbloqueo') }}" style="font-size: larger; font-weight: bold">Volver</a></td>
            </tr>
        </table>
        <h3 style="text-align: center">NÃºmero de Unidades Desbloqueadas desde {{ desde }} hasta {{ hasta }}</h3>
        <br/>
        <table class="consulta"style="text-align: center; background-color: white; font-size: smaller; margin-left: auto; margin-right: auto">
            <tr>
                <th>Tipo de Hemocomponente</th><th>Cantidad de Unidades</th>
            </tr>
            {% for inform in informe %}
            <tr>
                <td>{{ inform.hemo }}</td><td>{{ inform.cant }}</td>
            </tr>
            {% else %}
            <div class="consulta"><img src="{{ asset('images/error.png') }}"/>    NO SE HAN ENCONTRADO DATOS</div>
            <br/>
            {% endfor %}
        </table>

    </body>
    <script src="{{ asset('js/jquery-1.9.1.js') }}"></script>
    <script>
                    function imprimir() {
                        $('#boton').hide();
                        $('#volver').hide();
                        javascript:window.print();
                        $('#boton').show();
                        $('#volver').show();
                    }
        </script>

    </html>