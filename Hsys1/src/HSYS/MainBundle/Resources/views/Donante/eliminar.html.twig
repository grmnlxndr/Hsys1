{% extends 'HSYSMainBundle:Donante:donantebase.html.twig' %}

{% block title %}Eliminar Donante {{ donante.id }}{% endblock %}

{% block contenido %}
<h3>Donante a Eliminar</h3>
<form id="formulario" name="formulario" action="{{ path('eliminar_donante', { 'id' : id }) }}" method="post">
    <div>  
        <table class="detalle">
            <tr>
                <th>ID:</th>
                <td>{{ donante.id }}</td>
            </tr>
            <tr>
                <th>DNI:</th>
                <td>{{ donante.dni }}</td>
            </tr>
            <tr>
                <th>Apellido y nombre:</th>
                <td>{{ donante.nomapp }}</td>
            </tr>
        </table>
    </div>
    </br>
        {% if donante.baja %}
        <label>El donante se encuentra eliminado</label>
        {% else %}
        <input type="checkbox" name="aprobado" id="aprobado" onclick="eliminar()"> ¿Está seguro que desea eliminar el donante?<br>
        <input type="submit" value="Eliminar El Donante"/>
        {% endif %}
        
</form>

<script src="{{ asset('js/jquery-1.9.1.js') }}"></script>
<script>
$('input[type="submit"]').attr('disabled','disabled');  
function eliminar(){
if (aprobado.checked) {    
    $('input[type="submit"]').removeAttr('disabled');
} else {
    $('input[type="submit"]').attr('disabled','disabled');
    }
    };
</script>

{% endblock %}