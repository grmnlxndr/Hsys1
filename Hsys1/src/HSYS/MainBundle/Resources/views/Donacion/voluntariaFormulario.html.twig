{% extends 'HSYSMainBundle:Donacion:donacionbase.html.twig' %}

{% block title %}Donación Voluntaria{% endblock %}

{% block contenido %}

<h3>Donante:</h3>
{% if donante.excluido %}
<div class="consulta"><img src="{{ asset('images/error.png') }}"/>    DONANTE EXCLUIDO</div>
{% endif %}
    <table class="detalle">
        <tr>
            <th>ID: </th>
            <td>{{ donante.id }}</td>
        </tr>
        <tr>
            <th>Apellido y Nombre:  </th>
            <td>{{ donante.nomapp }}</td>
        </tr>
        <tr>
            <th>Factor Sangíneo: </th>
            <td>{{ donante.factorsang }}</td>
        </tr>

    </table>
    <br/>
    <form id="donacion_form" name="donacion_form" method="post" action="{{ path('alta_donacion_voluntaria_confirmar') }}">
        <table>
            <tr>
                <td><label>Fecha extracción: </label></td>
                <td><input  id="fecha" name="fecha" type="date" value="{{ "now"|date('Y-m-d') }}"/></td><!required="required">
            </tr>
            <tr>
                <td><label>Número de Bolsa: </label></td>
                <td><input required="required" id="bolsa" name="bolsa" type="text"/></td>
            </tr>
            <tr>
                <td><label>Volúmen extraído: </label></td>
                <td><input id="volumen" name="volumen" type="text"/></td>
                <td>cc</td>
            </tr>
            <tr>
                <td><label>Comentarios: </label></td>
                <td><textarea id="comentarios" name="comentarios" rows="5" form="donacion_form" style="auto"></textarea></td>
            </tr>
            <tr>
                <td><input type="submit" value="Confirmar"/></td>
            </tr>
        </table>
        <input id="donante" name="donante" type="hidden" value="{{ donante.id }}" />
    </form>

{% endblock %}