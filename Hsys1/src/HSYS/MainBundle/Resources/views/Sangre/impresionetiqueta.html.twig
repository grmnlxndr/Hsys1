<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <title>HSys - Imprimir Etiqueta</title>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" type="text/css" />
        <link rel="icon" type="image" href="{{ asset('images/Hsys icon1.png') }}" />
    </head>
    <body style="background: white">
        <table id="imprimible" style="text-align: center">          
            <tr><th style="font-size: larger">Factor Sanguíneo: </th><td style="font-size: 25px">{{ unidad.factorsang }}</td></tr>
            <tr></tr>
            <tr><th style="font-size: larger">Hemocomponente: </th><td style="font-size: larger">{{ unidad.tipohemocomponente.nombre }}</td></tr>
            <tr></tr>
            <tr><th style="font-size: larger">Fecha Extracción: </th><td style="font-size: larger">{{ unidad.Donacion.fechextraccion | date("d/m/Y") }}</td></tr>
            <tr></tr>
            <tr><th style="font-size: larger">Fecha Vencimiento: </th><td style="font-size: larger">{{ unidad.vencimiento | date("d/m/Y") }}</td></tr>
            <tr></tr>
            <tr><th style="font-size: larger">ID de Unidad: </th><td><barcode>*{{ unidad.id }}*</barcode></td></tr>
            <tr></tr>
            <tr>
                <td><a id="boton" onclick="imprimir()" style="font-size: larger; font-weight: bold; cursor: pointer">Imprimir</a></td>
                <td><a id="volver" href="{{ path('ver_unidad',{'id':unidad.id}) }}" style="font-size: larger; font-weight: bold">Volver</a></td>
            </tr>
        </table>

    </body>
        <script src="{{ asset('js/jquery-1.9.1.js') }}"></script>
        <script>
            function imprimir(){
                $('#boton').hide();
                $('#volver').hide();
                javascript:window.print();
                $('#boton').show();
                $('#volver').show();
            }
            </script>
        
</html>